<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>{{title }}</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css">
  <link rel="stylesheet" href="/css/style.css">
  {{#if ENV_DEVELOPMENT}}
    <script src="http://localhost:35729/livereload.js"></script>
  {{/if}}
</head>
<body>

  {{{body}}}

  <script>
    // Populate precompiled templates and initial page state passed in from the router
    window.HandlebarsIncDemo = window.HandlebarsIncDemo || {};

    window.HandlebarsIncDemo.precompiledPartials = {};
    {{#each precompiled}}
    window.HandlebarsIncDemo.precompiledPartials['{{@key}}'] = {{{this}}};
    {{/each}}
    {{#if pageStateJSON}}
    window.HandlebarsIncDemo.initialPageState = {{{pageStateJSON}}};
    {{/if}}
  </script>
  {{#each extraScripts}}
    <script src="{{{this}}}"></script>
  {{/each}}
</body>
</html>
