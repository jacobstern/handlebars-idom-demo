<section class="section">
  <div class="container" id="search-container">
    <h1 class="title">
      {{#if query}}
        Results for <i>{{query}}</i>
      {{else}}
        Search Wikipedia Articles
      {{/if}}
    </h1>
    <form class="search-form" method="GET">
      <div class="field has-addons">
        <div class="control">
          <input
            id="search-input" name="query" class="input" type="text"
            {{#if query}} value="{{query}}" {{/if}}>
        </div>
        <div class="control">
          <button id="search-button" class="button is-info">Search</button>
        </div>
      </div>
    </form>
    <ul class="search-results">
      {{#each results}}
        {{>search-result}}
      {{/each}}
    </ul>
  </div>
</section>